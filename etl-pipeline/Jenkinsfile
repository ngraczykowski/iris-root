@Library('pipeline-shared-library') _

pipeline {
    agent any
    environment {
        PIP_INDEX_URL = credentials('pypi-readonly-url')
    }
    stages {
        stage('Build') {
            steps {
                sh './scripts/build.sh'
            }
        }
        stage('Push') {
            when {
                branch 'master'
            }
            steps {
                sh './scripts/push.sh'
            }
        }
    }
}
