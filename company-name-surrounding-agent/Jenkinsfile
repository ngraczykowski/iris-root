@Library('pipeline-shared-library') _
def utils = new com.silenteight.jenkins.ci.Utils()
def jenkins = new com.silenteight.jenkins.ci.Jenkins()

pipeline {
    agent none
    environment {
        PYPI_URL = credentials('pypi-readonly-url')
    }
    options {
        timeout(time: 1, unit: 'HOURS')   // just to be safe
    }

    stages {
        stage('Prepare python image') {
            agent any
            steps {
                sh 'docker pull python:3.7'
            }
        }
        stage('Prepare') {
            agent {
                docker {
                    image 'python:3.7'
                }
            }
            stages {
                stage('Build') {
                    steps {
                        sh './scripts/clean.sh'
                        sh './scripts/bootstrap.sh --index-url $PYPI_URL'
                        sh './scripts/build.sh --index-url $PYPI_URL'
                    }
                }
            }
            post {
                always {
                    junit '.tox/*.xml'
                    archiveArtifacts artifacts: 'dist/*', fingerprint: true
                }
                success {
                    stash includes: 'dist/*', name: 'artifacts'
                }
            }
        }
        stage('Deployment'){
            agent {
                label 'nomad'
            }
            when {
                anyOf {
                    branch 'master'
                    tag pattern: '^v[\\d\\.]+\$', comparator: "REGEXP"
                    branch pattern: '^MR-\\d+\$', comparator: "REGEXP"
                }
            }
            stages {
                stage('Upload artifacts') {
                    steps {
                        sh './scripts/clean.sh'
                        unstash 'artifacts'
                        rtServer (
                            id: "silenteight-repo",
                            url: "https://repo.silenteight.com/artifactory",
                            credentialsId: "artifactory-deployment-user"
                        )
                        rtUpload (
                            serverId: 'silenteight-repo',
                            spec: '''{
                                  "files": [
                                    {
                                      "pattern": "dist/*.pyz",
                                      "target": "dist-public-local/company-name-surrounding-agent/"
                                    }
                                 ]
                            }''',
                        )
                        rtUpload (
                            serverId: 'silenteight-repo',
                            spec: '''{
                                  "files": [
                                    {
                                      "pattern": "dist/*.tgz",
                                      "target": "dist-public-local/company-name-surrounding-agent/"
                                    }
                                 ]
                            }''',
                        )
                    }
                }
            }
        }
    }
}
