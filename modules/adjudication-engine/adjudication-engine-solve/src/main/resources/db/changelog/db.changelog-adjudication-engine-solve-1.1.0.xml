<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

  <changeSet id="adjudication-engine-solve-1.1.0-1" author="tkleszcz">
    <createTable tableName="ae_agent_exchange">
      <column name="agent_exchange_id" type="UUID">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="feature" type="VARCHAR(150)">
        <constraints nullable="false"/>
      </column>
      <column name="agent_config" type="VARCHAR(150)">
        <constraints nullable="false"/>
      </column>
      <column name="priority" type="INTEGER">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createTable tableName="ae_agent_exchange_match_features">
      <column name="agent_exchange_id" type="UUID">
        <constraints nullable="false"/>
      </column>
      <column name="match_id" type="BIGINT">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <!--    todo tkleszcz: constraint name too long-->
    <addUniqueConstraint
        tableName="ae_agent_exchange"
        columnNames="feature,agent_config,match_id,priority"
        constraintName="uq_ae_agent_exchange_match_features_feature_agent_config_match_id_priority"/>

    <addForeignKeyConstraint
        baseTableName="ae_agent_exchange_match_features"
        baseColumnNames="agent_exchange_id"
        constraintName="fk_ae_agent_exchange_match_features_agent_exchange_id"
        referencedTableName="ae_agent_exchange"
        referencedColumnNames="agent_exchange_id"/>

    <createView viewName="ae_missing_feature_value_matches_query"
                path="db/changelog/sql/create_ae_missing_feature_value_matches_query.sql"/>

    <createView viewName="ae_missing_feature_value_query"
                path="db/changelog/sql/create_ae_missing_feature_value_query.sql"/>
  </changeSet>
</databaseChangeLog>
