<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="tsaas-bridge-1.0.1-1" author="ajaromin">

        <createTable tableName="alert_reco">
            <column name="alert_reco_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="alert_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="recommendation" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>

            <column name="comment" type="TEXT">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex
                tableName="alert_reco"
                indexName="ix_alert_reco_alert_id">
            <column name="alert_id"/>
        </createIndex>

        <addForeignKeyConstraint
                baseTableName="alert_reco"
                baseColumnNames="alert_id"
                constraintName="fk_aleret_reco_alert_id"
                referencedTableName="alert"
                referencedColumnNames="alert_id"/>

        <createTable tableName="hit_reco">
            <column name="hit_reco_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="hit_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="recommendation" type="VARCHAR(32)">
                <constraints nullable="false"/>
            </column>

            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex
                tableName="hit_reco"
                indexName="ix_hit_reco_hit_id">
            <column name="hit_id"/>
        </createIndex>

        <addForeignKeyConstraint
                baseTableName="hit_reco"
                baseColumnNames="hit_id"
                constraintName="fk_hit_reco_hit_id"
                referencedTableName="hit"
                referencedColumnNames="hit_id"/>

    </changeSet>
</databaseChangeLog>
