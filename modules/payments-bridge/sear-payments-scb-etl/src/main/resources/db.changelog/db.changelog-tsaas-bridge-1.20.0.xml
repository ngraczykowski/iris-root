<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="tsaas-bridge-1.20.0-1" author="ajaromin">
        <update tableName="available_agent">
            <column name="active" value="false"/>
            <where>name='GEO_AGENT'</where>
        </update>
        <insert tableName="available_agent">
            <column name="name" value="GEO_AGENT_COUNTRY"/>
            <column name="order" value="4"/>
        </insert>
        <insert tableName="available_agent">
            <column name="name" value="GEO_AGENT_STATE"/>
            <column name="order" value="5"/>
        </insert>
        <insert tableName="available_agent">
            <column name="name" value="GEO_AGENT_CITY"/>
            <column name="order" value="6"/>
        </insert>
    </changeSet>

    <changeSet id="tsaas-bridge-1.20.0-2" author="ajaromin">
        <addColumn tableName="hit">
            <column name="origin" type="VARCHAR(64)"/>
        </addColumn>
        <addColumn tableName="hit">
            <column name="designation" type="VARCHAR(64)"/>
        </addColumn>
    </changeSet>

    <changeSet id="tsaas-bridge-1.20.0-3" author="jgajewski">
        <insert tableName="available_agent">
            <column name="name" value="STRIP_AGENT"/>
            <column name="order" value="7"/>
        </insert>
    </changeSet>

    <changeSet id="tsaas-bridge-1.20.0-4" author="mwilkowski">
        <addColumn tableName="hit_reco">
            <column name="recommendation_before_override" type="VARCHAR(32)"/>
            <column name="override_reason" type="VARCHAR(64)"/>
        </addColumn>
        
        <addColumn tableName="alert_reco">
            <column name="recommendation_before_override" type="VARCHAR(32)"/>
            <column name="override_reason" type="VARCHAR(64)"/>
        </addColumn>
    </changeSet>

</databaseChangeLog>
