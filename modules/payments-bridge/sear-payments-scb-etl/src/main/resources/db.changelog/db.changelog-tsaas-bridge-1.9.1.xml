<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="tsaas-bridge-1.9.0-1" author="mwilkowski">

        <createTable tableName="credential">
            <column name="credential_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="username" type="varchar">
                <constraints nullable="false"/>
            </column>

            <column name="password" type="varchar">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="tsaas-bridge-1.9.1-1" author="ajaromin">
        <addColumn tableName="alert">
            <column name="current_status_id" type="VARCHAR(64)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <addColumn tableName="alert">
            <column name="current_status_routing_code" type="VARCHAR(64)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        <addColumn tableName="alert">
            <column name="current_status_checksum" type="VARCHAR(64)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
    </changeSet>

</databaseChangeLog>
