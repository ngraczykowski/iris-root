<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="tsaas-bridge-1.0.4-1" author="mbartecki">
        <createTable tableName="freetext_agent">
            <column name="freetext_agent_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="alert_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="hit_id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false"/>
            </column>

            <column name="wl_name" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>

            <column name="wl_name_synonyms" type="VARCHAR(1024)">
            </column>

            <column name="wl_type" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>

            <column name="matching_field" type="TEXT">
                <constraints nullable="false"/>
            </column>

        </createTable>

        <addForeignKeyConstraint
                baseTableName="freetext_agent"
                baseColumnNames="alert_id"
                constraintName="fk_freetext_agent_alert_id"
                referencedTableName="alert"
                referencedColumnNames="alert_id"/>

        <addForeignKeyConstraint
                baseTableName="freetext_agent"
                baseColumnNames="hit_id"
                constraintName="fk_freetext_agent_hit_id"
                referencedTableName="hit"
                referencedColumnNames="hit_id"/>

    </changeSet>
    <changeSet id="tsaas-bridge-1.0.4-2" author="mbartecki">
        <createTable tableName="freetext_agent_matching_text">
            <column name="freetext_agent_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="matching_text" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="freetext_agent_matching_text"
                baseColumnNames="freetext_agent_id"
                constraintName="fk_freetext_agent_matching_text_freetext_agent_id"
                referencedTableName="freetext_agent"
                referencedColumnNames="freetext_agent_id"/>
    </changeSet>
    <changeSet id="tsaas-bridge-1.0.4-3" author="mbartecki">
        <createTable tableName="crossmatch_agent">
            <column name="crossmatch_agent_id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>

            <column name="alert_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>

            <column name="hit_id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false"/>
            </column>

            <column name="wl_name" type="VARCHAR(1024)">
                <constraints nullable="false"/>
            </column>

            <column name="wl_country" type="VARCHAR(128)">
            </column>

            <column name="wl_type" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint
                baseTableName="crossmatch_agent"
                baseColumnNames="alert_id"
                constraintName="fk_crossmatch_agent_alert_id"
                referencedTableName="alert"
                referencedColumnNames="alert_id"/>

        <addForeignKeyConstraint
                baseTableName="crossmatch_agent"
                baseColumnNames="hit_id"
                constraintName="fk_crossmatch_agent_hit_id"
                referencedTableName="hit"
                referencedColumnNames="hit_id"/>

    </changeSet>
    <changeSet id="tsaas-bridge-1.0.4-4" author="mbartecki">
        <createTable tableName="crossmatch_agent_matching_text">
            <column name="crossmatch_agent_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="matching_field" type="VARCHAR(64)">
                <constraints nullable="false"/>
            </column>
            <column name="matching_text" type="TEXT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint
                baseTableName="crossmatch_agent_matching_text"
                baseColumnNames="crossmatch_agent_id"
                constraintName="fk_crossmatch_agent_matching_text_crossmatch_agent_id"
                referencedTableName="crossmatch_agent"
                referencedColumnNames="crossmatch_agent_id"/>
    </changeSet>
</databaseChangeLog>
