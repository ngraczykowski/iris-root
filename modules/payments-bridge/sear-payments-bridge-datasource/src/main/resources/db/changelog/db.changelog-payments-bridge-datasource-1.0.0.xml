<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.10.xsd">

  <changeSet id="payments-bridge-datasource-1.0.0-1" author="ahaczewski">
    <createTable tableName="pb_match_feature_input">
      <column name="match" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>
      <column name="feature" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>
      <!-- The name of the type contained in `agent_input` column. -->
      <column name="agent_input_type" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>
      <!--
        Contains JSON-serialized Protobuf message object with Agent feature input, e.g.,
        `com.silenteight.datasource.api.location.v1LocationFeatureInput`,
        or `com.silenteight.datasource.api.name.v1.NameFeatureInput`.
      -->
      <column name="agent_input" type="JSONB">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="payments-bridge-datasource-1.0.0-2" author="jgajewski">

    <renameColumn tableName="pb_match_feature_input" oldColumnName="match"
                  newColumnName="match_name"/>

    <addPrimaryKey
        tableName="pb_match_feature_input"
        columnNames="match_name, feature"
        constraintName="pk_pb_match_feature_input"/>

    <createIndex
        tableName="pb_match_feature_input"
        indexName="ix_pb_match_feature_input_match_name">
      <column name="match_name"/>
    </createIndex>

    <createIndex
        tableName="pb_match_feature_input"
        indexName="ix_pb_match_feature_input_feature">
      <column name="feature"/>
    </createIndex>
  </changeSet>

  <changeSet id="payments-bridge-datasource-1.0.0-3" author="jgajewski">
    <createTable tableName="pb_category_value">
      <column name="match_name" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>
      <column name="category_name" type="VARCHAR(100)">
        <constraints nullable="false"/>
      </column>
      <column name="value" type="TEXT">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey
        tableName="pb_category_value"
        columnNames="match_name, category_name"
        constraintName="pk_pb_category_value"/>

    <createIndex
        tableName="pb_category_value"
        indexName="ix_pb_category_value_match">
      <column name="match_name"/>
    </createIndex>

    <createIndex
        tableName="pb_category_value"
        indexName="ix_pb_category_value_category">
      <column name="category_name"/>
    </createIndex>
  </changeSet>
</databaseChangeLog>
