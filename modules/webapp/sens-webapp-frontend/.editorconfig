# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
# NOTE(ahaczewski): This prevents IntelliJ from doing double-indents for continuation lines. Keep it disabled!
#indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
