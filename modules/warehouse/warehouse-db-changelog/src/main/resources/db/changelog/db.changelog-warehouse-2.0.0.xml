<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

  <changeSet id="warehouse-2.0.0-1" author="wfirlej">
    <createTable tableName="warehouse_alert">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="discriminator" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="name" type="VARCHAR(128)">
        <constraints nullable="true"/>
      </column>
      <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="recommendation_date" type="TIMESTAMP">
        <constraints nullable="true"/>
      </column>
      <column name="payload" type="jsonb">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createIndex
        tableName="warehouse_alert"
        indexName="ix_warehouse_alert_discriminator"
        unique="true">
      <column name="discriminator"/>
    </createIndex>
    <createIndex
        tableName="warehouse_alert"
        indexName="ix_warehouse_alert_alert_name"
        unique="true">
      <column name="name"/>
    </createIndex>

    <createTable tableName="warehouse_match">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="alert_id" type="BIGINT">
        <constraints nullable="false" foreignKeyName="fk_alert_id"
                     references="warehouse_alert(id)"/>
      </column>
      <column name="match_id" type="VARCHAR(128)">
        <constraints nullable="true"/>
      </column>
      <column name="name" type="VARCHAR(128)">
        <constraints nullable="true"/>
      </column>
      <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="payload" type="jsonb">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addUniqueConstraint columnNames="alert_id, match_id"
                         constraintName="uq_warehouse_match_alert_id_match_id"
                         tableName="warehouse_match"
                         validate="true"/>

    <createTable tableName="warehouse_alert_label">
      <column name="alert_id" type="BIGINT">
        <constraints nullable="false" foreignKeyName="fk_alert_id"
                     references="warehouse_alert(id)"/>
      </column>
      <column name="name" type="VARCHAR(128)">
        <constraints nullable="false"/>
      </column>
      <column name="value" type="VARCHAR(128)">
        <constraints nullable="true"/>
      </column>

    </createTable>

    <addUniqueConstraint columnNames="name, alert_id"
                         constraintName="uq_warehouse_alert_label_alert_id_name"
                         tableName="warehouse_alert_label"
                         validate="true"/>
  </changeSet>

  <changeSet id="warehouse-2.0.0-2" author="skociuba">
    <createTable tableName="warehouse_lock">
      <column name="lock_key" type="CHAR(36)">
        <constraints nullable="false" primaryKey="true" primaryKeyName="int_lock_pk"/>
      </column>
      <column name="region" type="VARCHAR(100)">
        <constraints nullable="false" primaryKey="true" primaryKeyName="int_lock_pk"/>
      </column>
      <column name="client_id" type="CHAR(36)"/>
      <column name="created_date" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="warehouse-2.0.0-3" author="skociuba">
    <addColumn tableName="warehouse_message_backup">
      <column name="migrated" type="boolean"/>
    </addColumn>
  </changeSet>


  <changeSet id="warehouse-2.0.0-4" author="anowicki">
    <sql splitStatements="true">
      CREATE TABLE warehouse_simulation_alert (
      id bigint generated by default as identity,
      name varchar(128) not null,
      analysis_name varchar(128) not null,
      created_at timestamp DEFAULT CURRENT_TIMESTAMP,
      payload jsonb not null
      ) PARTITION BY LIST (analysis_name);
    </sql>
  </changeSet>

  <changeSet id="warehouse-2.0.0-5" author="plewandowski">
    <renameColumn newColumnName="file_storage_name"
                  oldColumnName="data"
                  tableName="warehouse_report_billing"/>

    <modifyDataType columnName="file_storage_name"
                    newDataType="VARCHAR(64)"
                    tableName="warehouse_report_billing"/>

    <dropColumn columnName="report_type"
                tableName="warehouse_report_billing">
    </dropColumn>
  </changeSet>

  <changeSet id="warehouse-2.0.0-6" author="wfirlej">
    <renameColumn tableName="warehouse_report_rbs"
                  oldColumnName="data"
                  newColumnName="file_storage_name"/>
  </changeSet>

  <changeSet id="warehouse-2.0.0-7" author="plewandowski">
    <addColumn tableName="warehouse_country_group">
      <column name="migrated" type="boolean" defaultValueBoolean="false"/>
    </addColumn>

    <createTable tableName="warehouse_country">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="country_group_id" type="${type.uuid}">
        <constraints nullable="false"/>
      </column>
      <column name="country" type="VARCHAR(32)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint
        baseTableName="warehouse_country"
        baseColumnNames="country_group_id"
        constraintName="fk_warehouse_country_group_id"
        referencedTableName="warehouse_country_group"
        referencedColumnNames="country_group_id"/>

    <addUniqueConstraint
        columnNames="country_group_id, country"
        constraintName="uq_warehouse_country_group_id_country"
        tableName="warehouse_country"/>
  </changeSet>
</databaseChangeLog>
