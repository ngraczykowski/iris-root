<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

  <changeSet id="warehouse-2.0.0-1" author="wfirlej">
    <createTable tableName="warehouse_alert">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="discriminator" type="VARCHAR(255)">
        <constraints nullable="false"/>
      </column>
      <column name="name" type="VARCHAR(128)">
        <constraints nullable="true"/>
      </column>
      <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="recommendation_date" type="TIMESTAMP">
        <constraints nullable="true"/>
      </column>
      <column name="payload" type="jsonb">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <createIndex
        tableName="warehouse_alert"
        indexName="ix_warehouse_alert_discriminator"
        unique="true">
      <column name="discriminator"/>
    </createIndex>
    <createIndex
        tableName="warehouse_alert"
        indexName="ix_warehouse_alert_alert_name"
        unique="true">
      <column name="name"/>
    </createIndex>

    <createTable tableName="warehouse_match">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="alert_id" type="BIGINT">
        <constraints nullable="false" foreignKeyName="fk_alert_id"
                     references="warehouse_alert(id)"/>
      </column>
      <column name="match_id" type="VARCHAR(128)">
        <constraints nullable="true"/>
      </column>
      <column name="name" type="VARCHAR(128)">
        <constraints nullable="true"/>
      </column>
      <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="payload" type="jsonb">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addUniqueConstraint columnNames="alert_id, match_id"
                         constraintName="uq_warehouse_match_alert_id_match_id"
                         tableName="warehouse_match"
                         validate="true"/>

    <createTable tableName="warehouse_alert_label">
      <column name="alert_id" type="BIGINT">
        <constraints nullable="false" foreignKeyName="fk_alert_id"
                     references="warehouse_alert(id)"/>
      </column>
      <column name="name" type="VARCHAR(128)">
        <constraints nullable="false"/>
      </column>
      <column name="value" type="VARCHAR(128)">
        <constraints nullable="true"/>
      </column>

    </createTable>

    <addUniqueConstraint columnNames="name, alert_id"
                         constraintName="uq_warehouse_alert_label_alert_id_name"
                         tableName="warehouse_alert_label"
                         validate="true"/>
  </changeSet>

  <changeSet id="warehouse-2.0.0-2" author="skociuba">
    <createTable tableName="warehouse_lock">
      <column name="lock_key" type="CHAR(36)">
        <constraints nullable="false" primaryKey="true" primaryKeyName="int_lock_pk"/>
      </column>
      <column name="region" type="VARCHAR(100)">
        <constraints nullable="false" primaryKey="true" primaryKeyName="int_lock_pk"/>
      </column>
      <column name="client_id" type="CHAR(36)"/>
      <column name="created_date" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>
  </changeSet>

  <changeSet id="warehouse-2.0.0-3" author="skociuba">
    <addColumn tableName="warehouse_message_backup">
      <column name="migrated" type="boolean"/>
    </addColumn>
  </changeSet>


  <changeSet id="warehouse-2.0.0-4" author="anowicki">
    <sql splitStatements="true">
      CREATE TABLE warehouse_simulation_alert (
      id bigint generated by default as identity,
      name varchar(128) not null,
      analysis_name varchar(128) not null,
      created_at timestamp DEFAULT CURRENT_TIMESTAMP,
      payload jsonb not null
      ) PARTITION BY LIST (analysis_name);
    </sql>
  </changeSet>

  <changeSet id="warehouse-2.0.0-5" author="plewandowski">
    <renameColumn newColumnName="file_storage_name"
                  oldColumnName="data"
                  tableName="warehouse_report_billing"/>

    <modifyDataType columnName="file_storage_name"
                    newDataType="VARCHAR(64)"
                    tableName="warehouse_report_billing"/>

    <dropColumn columnName="report_type"
                tableName="warehouse_report_billing">
    </dropColumn>
  </changeSet>

  <changeSet id="warehouse-2.0.0-6" author="wfirlej">
    <renameColumn tableName="warehouse_report_rbs"
                  oldColumnName="data"
                  newColumnName="file_storage_name"/>
  </changeSet>

  <changeSet id="warehouse-2.0.0-7" author="plewandowski">
    <addColumn tableName="warehouse_country_group">
      <column name="migrated" type="boolean" defaultValueBoolean="false"/>
    </addColumn>

    <createTable tableName="warehouse_country">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="country_group_id" type="${type.uuid}">
        <constraints nullable="false"/>
      </column>
      <column name="country" type="VARCHAR(32)">
        <constraints nullable="false"/>
      </column>
      <column name="created_at" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addForeignKeyConstraint
        baseTableName="warehouse_country"
        baseColumnNames="country_group_id"
        constraintName="fk_warehouse_country_group_id"
        referencedTableName="warehouse_country_group"
        referencedColumnNames="country_group_id"/>

    <addUniqueConstraint
        columnNames="country_group_id, country"
        constraintName="uq_warehouse_country_group_id_country"
        tableName="warehouse_country"/>
  </changeSet>

  <changeSet id="warehouse-2.0.0-8" author="skociuba">
    <addColumn tableName="warehouse_report_metrics">
      <column name="file_storage_name" type="VARCHAR(64)"/>
    </addColumn>
    <dropColumn columnName="data" tableName="warehouse_report_metrics"/>
    <dropColumn columnName="report_type" tableName="warehouse_report_metrics"/>
    <dropColumn columnName="analysis" tableName="warehouse_report_metrics"/>
  </changeSet>

  <changeSet id="warehouse-2.0.0-9" author="plewandowski">
    <dropForeignKeyConstraint baseTableName="warehouse_alert_label" constraintName="fk_alert_id"/>
    <addForeignKeyConstraint baseTableName="warehouse_alert_label" baseColumnNames="alert_id"
                             constraintName="fk_alert_id"
                             referencedTableName="warehouse_alert" referencedColumnNames="id"
                             onDelete="CASCADE"/>

    <dropForeignKeyConstraint baseTableName="warehouse_match" constraintName="fk_alert_id"/>
    <addForeignKeyConstraint baseTableName="warehouse_match" baseColumnNames="alert_id"
                             constraintName="fk_alert_id"
                             referencedTableName="warehouse_alert" referencedColumnNames="id"
                             onDelete="CASCADE"/>
  </changeSet>

  <changeSet id="warehouse-2.0.0-10" author="skociuba">
    <createTable tableName="warehouse_report">
      <column name="id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="type" type="VARCHAR(24)">
        <constraints nullable="false"/>
      </column>
      <column name="state" type="VARCHAR(24)">
        <constraints nullable="false"/>
      </column>
      <column name="analysis" type="VARCHAR(64)"/>
      <column name="created_at" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="from_range" type="TIMESTAMP"/>
      <column name="to_range" type="TIMESTAMP"/>
      <column name="file_storage_name" type="VARCHAR(64)"/>
    </createTable>
  </changeSet>

  <changeSet id="warehouse-2.0.0-11" author="skociuba">
    <addColumn tableName="warehouse_message_backup">
      <column name="migrated_at" type="TIMESTAMP"/>
    </addColumn>
  </changeSet>


  <changeSet id="warehouse-2.0.0-12" author="wfirlej">
    <sql splitStatements="true">
      ALTER TABLE warehouse_match RENAME TO warehouse_match_old;

      CREATE TABLE IF NOT EXISTS warehouse_match
      (
        alert_id   bigint                  NOT NULL
        CONSTRAINT fk_alert_id
        REFERENCES warehouse_alert ON DELETE CASCADE,
        match_id   varchar(128),
        name       varchar(128),
        created_at timestamp default now() NOT NULL,
        payload    jsonb                   NOT NULL,
        CONSTRAINT uniq_warehouse_match_alert_id_match_id
        UNIQUE (alert_id, match_id)
        ) PARTITION BY RANGE (alert_id);

      CREATE TABLE warehouse_match_1500000 PARTITION OF warehouse_match FOR VALUES FROM (1) TO (1500000);
      INSERT INTO warehouse_match (SELECT alert_id, match_id, name, created_at, payload FROM warehouse_match_old);
    </sql>

  </changeSet>

</databaseChangeLog>
