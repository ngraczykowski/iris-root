<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

  <changeSet id="customer-bridge-sync-3.0.0-1" author="mjasinski">

    <createTable tableName="scb_gns_sync">
      <column name="gns_sync_id" type="BIGINT" autoIncrement="true">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="started_at" type="TIMESTAMP">
        <constraints nullable="false"/>
      </column>
      <column name="finished_at" type="TIMESTAMP"/>
      <column name="partially_loaded" type="BOOLEAN" defaultValue="FALSE">
        <constraints nullable="false"/>
      </column>
      <column name="error_message" type="TEXT"/>
    </createTable>

    <createTable tableName="scb_gns_sync_delta">
      <column name="alert_external_id" type="VARCHAR(64)">
        <constraints primaryKey="true" nullable="false"/>
      </column>
      <column name="decisions_count" type="INTEGER">
        <constraints nullable="false"/>
      </column>
    </createTable>

  </changeSet>

  <changeSet id="customer-bridge-sync-3.0.0_2" author="mjasinski">
    <createTable tableName="scb_cbs_hits_details_helper">
      <column name="system_id" type="VARCHAR(64)">
        <constraints nullable="false"/>
      </column>
      <column name="seq_no" type="INTEGER">
        <constraints nullable="false"/>
      </column>
      <column name="gns_sync_id" type="INTEGER">
        <constraints nullable="false"/>
      </column>
      <column name="batch_id" type="VARCHAR(64)">
        <constraints nullable="false"/>
      </column>
      <column name="hit_neo_flag" type="VARCHAR(20)">
        <constraints nullable="false"/>
      </column>
    </createTable>

    <addPrimaryKey
        tableName="scb_cbs_hits_details_helper"
        columnNames="system_id,seq_no,gns_sync_id"
        constraintName="pk_scb_cbs_hits_details_helper"/>
  </changeSet>

</databaseChangeLog>
